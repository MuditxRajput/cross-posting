{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {

      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"], // If you have a utils directory
      "@database/*": ["../../packages/database/*"] // Adjust based on your directory structure
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
