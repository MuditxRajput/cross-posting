{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./", 
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "traceResolution": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@database/*": ["../../packages/database/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/database" }
  ]
}
